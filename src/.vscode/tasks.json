{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start:nuxt",
      "type": "npm",
      "script": "start:nuxt",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true,
        "group": "build"
      },
      "problemMatcher": {
        "base": "$eslint-stylish",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Updated",
          "endsPattern": "Compiled successfully in",
        }
      }
    },
    {
      "label": "start:babel",
      "type": "npm",
      "script": "start:babel",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true,
        "group": "build"
      },
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "ERROR"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "->",
          "endsPattern": "Successfully compiled"
        }
      }
    },
    {
      "label": "start:electron",
      "type": "npm",
      "script": "start:electron",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "kill",
      "type": "process",
      "command": "${command:workbench.action.terminal.kill}"
    },
    {
      "label": "build",
      "dependsOn": [
        "start:nuxt",
        "start:babel"
      ],
      "dependsOrder": "parallel",
    },
    {
      "label": "start",
      "dependsOn": [
        "build",
        "start:electron"
      ],
      "dependsOrder": "parallel"
    }
  ]
}